{
  "manifest_version": 3,
  "name": "Tab Sound Manager",
  "version": "1.0",
  "description": "Toggle mute/unmute for the current tab by clicking the extension icon.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon_unmuted16.png",
      "48": "icons/icon_unmuted48.png",
      "128": "icons/icon_unmuted128.png"
    }
  },
  "icons": {
    "16": "icons/icon_unmuted16.png",
    "48": "icons/icon_unmuted48.png",
    "128": "icons/icon_unmuted128.png"
  },
  "options_page": "options.html"
}
